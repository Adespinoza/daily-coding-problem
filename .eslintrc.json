{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "no-plusplus": "off",
      "no-param-reassign": "off",
      "no-use-before-define": ["error", { "functions": false }],
      "no-unused-vars": "off",
      "no-continue": "off",
      "no-bitwise": "off"
    }
}
